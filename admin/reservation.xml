            <div class="content-wrapper">

                <div class="container-fluid">
                <!-- Breadcrumbs-->
                <ol class="breadcrumb">
                    <li class="breadcrumb-item">
                    <a href="#">Tableau de bord</a>
                    </li>
                    <li class="breadcrumb-item active">Réservations</li>
                </ol>
                    <div class="box_general">
                        <div class="header_box">
                            <h2 class="d-inline-block">Liste des réservations</h2>
                            <div class="filter">
                                <select name="orderby" class="selectbox">
                                    <option value="Any status">Tous les statuts</option>
                                    <option value="Approved">Approuvé</option>
                                    <option value="Pending">En attente</option>
                                    <option value="Cancelled">Annulée</option>
                                </select>
                            </div>
                        </div>
                        <div class="list_general">
                            <ul>
                                <t t-foreach="rendezVous" t-as="rendezVous">
                                <li>
                                    <figure><img t-att-src="'data:image/png;base64,%s' % to_text(rendezVous.patient_id.photo)" class="img-fluid" /></figure>
                                    <h4><t t-esc="rendezVous.patient_id.patient_id.name"/><i class="pending">En attente</i></h4>
                                    <ul class="booking_details">
                                        <li><strong>Date - Heure(Debut)</strong><t t-esc="rendezVous.appointment_date"/> </li>
                                        <li><strong>Date - Heure(Fin)</strong> <t t-esc="rendezVous.appointment_end"/> </li>
                                        <li><strong>Message</strong> <t t-esc="rendezVous.comments"/> </li>
                                        <li><strong>Telephone</strong> <a t-attf-href="https://wa.me/#str({rendezVous.patient_id.patient_id.phone})"><t t-esc="rendezVous.patient_id.patient_id.phone"/></a></li>
                                        <li><strong>Email</strong> <a t-attf-href="mailto:#{rendezVous.patient_id.patient_id.email}"><t t-esc="rendezVous.patient_id.patient_id.email"/></a> </li>
                                    </ul>
                                    <ul class="buttons">
                                        <li><a t-attf-href="/consulter/#{rendezVous.patient_id.id}" class="btn_1 gray approve"><i class="fa fa-fw fa-check-circle-o"></i> Approuvé</a></li>
                                        <li><a  t-attf-href="/detail-medecin/" class="btn_1 gray delete"><i class="fa fa-fw fa-times-circle-o"></i> Annulée</a></li>
                                    </ul>
                                </li>
                               </t>
                            </ul>
                        </div>
                    </div>
